<div class="col-lg-3 col-md-3">
    <div class="shop__sidebar">
        <form method='GET'>
        <div class="sidebar__sizes">
            <div class="section-title">
                <h4>THƯƠNG HIỆU</h4>
            </div>
            <div class="size__list">
                <% nav.brands.forEach((brand, index)=>{%>
                    <label>
                        <%=brand.name%>
                        <input name='[xx]' type="checkbox" value="<%=brand._id%>">
                        <span class="checkmark"></span>
                    </label>
                <%});%>
            </div>
        </div>
        <div class="sidebar__filter">
            <div class="section-title">
                <h4>LỌC THEO GIÁ</h4>
            </div>
            <div class="filter-range-wrap">
                <div class="price-range ui-slider ui-corner-all ui-slider-horizontal ui-widget ui-widget-content"
                data-min="200000" data-max="8000000"></div>
                <div class="range-slider">
                    <div class="price-input">
                        <input name='priceMin' type="text" id="minamount">
                        <input name='priceMax' type="text" id="maxamount">
                    </div>
                </div>
            </div>
        </div>
        <%all.attributes.forEach((attr, index)=>{%>
            <div class="sidebar__sizes">
                <div class="section-title">
                    <h4>Lọc theo <%=attr.name%></h4>
                </div>
                <div class="size__list">
                    <% all.values.forEach((value, index)=>{%>
                        <% if(JSON.stringify(value.attribute_id)==JSON.stringify(attr._id)){ %>
                            <label>
                                <%=value.value%>
                                <input name='[value]' type="checkbox" value="<%=value._id%>">
                                <span class="checkmark"></span>
                            </label>
                        <%}%>
                    <%});%>
                </div>
            </div>
        <%});%>
        <button type='submit' style="border: 2px solid red; background-color: white; color: black;">Lọc</button>
        </form>
    </div>
</div>