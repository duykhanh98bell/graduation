<!DOCTYPE html>
<html>
  <head>
    <%- include('../../layouts/head.ejs')%>
  </head>
  <body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
      <%- include('../../layouts/header.ejs')%>
      <!-- Left side column. contains the logo and sidebar -->
      <%- include('../../layouts/sidebar.ejs')%>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <%-include('../../layouts/content-header.ejs')%>

        <!-- Main content -->
        <section class="content">
          <div class="row">
            <div class="col-xs-12">
              <!-- /.box -->

              <div class="box">
                <div class="box-header">
                  <h3 class="box-title">Data Table With Full Features</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                  <table
                    id="example1"
                    class="table table-bordered table-striped"
                  >
                    <thead>
                      <tr>
                        <th>STT</th>
                        <th>Tên khách hàng</th>
                        <th>Số điện thoại</th>
                        <th>Email</th>
                        <th>Địa chỉ giao hàng</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th>Ghi Chú</th>
                        <th>Giảm giá</th>
                        <th>Phương thức thanh toán</th>
                        <th Width=100>Ngày tạo</th>
                        <th Width=100>Ngày cập nhật</th>
                        <th width=150>Tùy chọn</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% allBill.forEach((bill, index)=>{ %>
                      <tr>
                        <td><%= index+1 %></td>
                        <td><%=bill.customer_id.name%></td>
                        <td><%=bill.customer_id.phone%></td>
                        <td><%=bill.customer_id.email%></td>
                        <td><%=bill.address%></td>
                        <td><%=bill.total%></td>
                        <td>
                            <% if (bill.status === true) { %>
                            <form action="/order/status/<%=bill._id%>" method="POST">
                                <button  class="btn btn-success">Đã giao</button>
                            </form>
                            <% }else if(bill.status === false) { %>
                            <form action="/order/status/<%=bill._id%>" method="POST">
                                <button  class="btn btn-warning">Chưa giao</button>
                            </form>
                            <% }; %>
                        </td>
                        <td><%=bill.note%></td>
                        <td><%=bill.sale%> %</td>
                        <td><%=bill.payment%></td>
                        <td><%=bill.createdAt%></td>
                        <td><%=bill.updatedAt%></td>
                        <td>
                          <a class="btn btn-primary" href="/order/<%=bill._id%>">Chi tiết</a>
                          <a class="btn btn-warning" href="/order/update/<%=bill._id%>">Sửa</a>
                          <a
                            class="btn btn-danger"
                            href="/order/delete/<%=bill._id%>"
                            onclick="return confirm('xác nhận xóa')"
                            >Xóa</a
                          >
                        </td>
                      </tr>
                      <% }); %>
                    </tbody>
                    <tfoot>
                      <tr>
                        <th>STT</th>
                        <th>Tên khách hàng</th>
                        <th>Số điện thoại</th>
                        <th>Email</th>
                        <th>Địa chỉ giao hàng</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th>Ghi Chú</th>
                        <th>Giảm giá</th>
                        <th>Phương thức thanh toán</th>
                        <th>Ngày tạo</th>
                        <th>Ngày cập nhật</th>
                        <th>Tùy chọn</th>
                      </tr>
                    </tfoot>
                  </table>
                </div>
                <!-- /.box-body -->
              </div>
              <!-- /.box -->
            </div>
            <!-- /.col -->
          </div>
          <!-- /.row -->
        </section>
        <!-- /.content -->
      </div>
      <!-- /.content-wrapper -->
      <%- include('../../layouts/footer.ejs')%>
      <!-- /.control-sidebar -->
      <!-- Add the sidebar's background. This div must be placed
       immediately after the control sidebar -->
      <div class="control-sidebar-bg"></div>
    </div>
    <!-- ./wrapper -->

    <%-include('../../layouts/script.ejs')%>
  </body>
</html>
