<!DOCTYPE html>
<html>
<head>
  <%- include('../../layouts/head.ejs')%>
</head>
<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">

  <%- include('../../layouts/header.ejs')%>
  <!-- Left side column. contains the logo and sidebar -->
  <%- include('../../layouts/sidebar.ejs')%>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <%-include('../../layouts/content-header.ejs')%>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <!-- /.box -->

          <div class="box">
            <div class="box-header">
              <a href="/sale/create" class="btn btn-success">Tạo mới</a>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>STT</th>
                  <th>Khuyến mãi</th>
                  <th>Code</th>
                  <th>Phần trăm</th>
                  <th width=200>Ngày tạo</th>
                  <th>Tùy chọn</th>
                </tr>
                </thead>
                <tbody>
                <% getSale.forEach((sale, index)=>{ %>
                <tr>
                  <td><%- index+1 %></td>
                  <td><%-sale.name%></td>
                  <td><%-sale.code%></td>
                  <td><%-sale.percent%></td>
                  <td><%-sale.createdAt%></td>
                  <td>
                    <a class="btn btn-warning" href="/sale/update/<%-sale._id%>" >Sửa</a>
                    <a class="btn btn-danger" href="/sale/delete/<%-sale._id%>" onclick= "return confirm('xác nhận xóa')" >Xóa</a>
                  </td>
                </tr>
                <% }); %>
                </tbody>
                <tfoot>
                <tr>
                <th>STT</th>
                  <th>Khuyến mãi</th>
                  <th>Code</th>
                  <th>Phần trăm</th>
                  <th>Ngày tạo</th>
                  <th>Tùy chọn</th>
                </tr>
                </tfoot>
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <%- include('../../layouts/footer.ejs')%>
  <!-- /.control-sidebar -->
  <!-- Add the sidebar's background. This div must be placed
       immediately after the control sidebar -->
  <div class="control-sidebar-bg"></div>
</div>
<!-- ./wrapper -->

<!-- jQuery 3 -->
<%-include('../../layouts/script.ejs')%>
</body>
</html>
