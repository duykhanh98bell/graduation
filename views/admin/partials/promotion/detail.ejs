<!DOCTYPE html>
<html>
<head>
  <%- include('../../layouts/head.ejs')%>
</head>
<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">

  <%- include('../../layouts/header.ejs') %>
  <!-- Left side column. contains the logo and sidebar -->
  <%- include('../../layouts/sidebar.ejs') %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <%-include('../../layouts/content-header.ejs')%>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <!-- left column -->
        <div class="col-md-2">
        </div>
        <!--/.col (left) -->
        <!-- right column -->
        <div class="col-md-8">
          <!-- Horizontal Form -->
          <div class="box box-info">
            <!-- /.box-header -->
            <!-- form start -->
            <form  method="POST">
              <div class="box-header">
                <h3 class="box-title"><a class="btn btn-success" href="/promotion">Xem danh sách</a></h3>
                <h3 class="box-title"><a class="btn btn-danger" href="/promotion/update/<%=detail.findPromotion._id%>">Sửa</a></h3>
              </div>
             
              <div class="box-body">
                <div class="form-group">
                  <label for="name">Tên Chương trình khuyến mãi</label>
                  <p><%=detail.findPromotion.name%></p>
                </div>
               
                <div class="form-group">
                  <label for="percent">Phần trăm giảm giá</label>
                  <p><%=detail.findPromotion.percent%> %</p>
                </div>
                
                <div class="form-check">
                    <div class="form-group" >
                        <label>Sản phẩm</label>
                        <%if(detail.products.length) {%>
                            <%detail.products.forEach((pro, index)=>{%>
                                <span class="btn btn-primary"><%=pro[0].name%></span>
                            <%})%>
                        <%}%>
                        
                    </div>
                    <!-- /.form-group -->
                    
                </div>
                <div class="form-group">
                    <label>Date and time range:</label>
                    <p>Ngày bắt đầu: <%=(detail.findPromotion.start_date).getDate() + '-' + (detail.findPromotion.start_date).getMonth() + '-' + (detail.findPromotion.start_date).getFullYear()%></p>
                    <p>Ngày kết thúc: <%=(detail.findPromotion.end_date).getDate() + '-' + (detail.findPromotion.end_date).getMonth() + '-' + (detail.findPromotion.end_date).getFullYear()%></p>
                   
                    <!-- /.input group -->
                </div>
              
              </div>
              <!-- /.box-footer -->
            </form>
          </div>
          <!-- /.box -->
          <!-- general form elements disabled -->
          
          <!-- /.box -->
        </div>
        <!--/.col (right) -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <%- include('../../layouts/footer.ejs') %>
  <!-- Add the sidebar's background. This div must be placed
       immediately after the control sidebar -->
  <div class="control-sidebar-bg"></div>
</div>
<!-- ./wrapper -->

<%-include('../../layouts/script.ejs')%>
<script>
    $(document).ready(function() {
        $('.js-example-basic-multiple').select2();
    });
</script>
    
</body>
</html>
