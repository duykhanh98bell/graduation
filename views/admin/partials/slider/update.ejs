<!DOCTYPE html>
<html>
  <head>
    <%- include('../../layouts/head.ejs')%>
  </head>
  <body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
      <%- include('../../layouts/header.ejs') %>
      <!-- Left side column. contains the logo and sidebar -->
      <%- include('../../layouts/sidebar.ejs') %>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <%-include('../../layouts/content-header.ejs')%>

        <!-- Main content -->
        <section class="content">
          <div class="row">
            <!-- left column -->
            <!--/.col (left) -->
            <div class="col-md-2"></div>
            <!-- right column -->
            <div class="col-md-8">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Quick Example</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form role="form" method="POST" enctype="multipart/form-data">
              <div class="box-body">
                <div class="form-group">
                  <label for="exampleInputEmail1">Ten slider</label>
                  <input value="<%-slider.name%>" type="text" name="name" class="form-control" id="exampleInputEmail1" placeholder="Tên slider">
                </div>
                
                <div class="form-group">
                  <label for="img">Image</label>
                  <input type="file" id="img" name="image" onchange="showPreview(event);">
                  <img id="img-preview"
                    name="image" 
                    src="" 
                    alt="..." 
                    width=200 
                  />
                  <img width=200 src="/uploads/slider/<%-slider.image%>" class="img-fluid ${3|rounded-top,rounded-right,rounded-bottom,rounded-left,rounded-circle,|}" alt="">
                </div>
                <div class="form-group" data-select2-id="25">
                    <label>Active</label>
                    <select name="active" class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true">
                    <option <%-(slider.active===true)?"selected":""%> value="true" data-select2-id="3">Hiện</option>
                    <option <%-(slider.active===false)?"selected":""%> value="false" data-select2-id="28">Ẩn</option>
                    </select>
                </div>
                
                
              <!-- /.box-body -->

              <div class="box-footer">
                <button type="submit" class="btn btn-primary">Lưu</button>
              </div>
            </form>
          </div>
          
          <!-- /.box -->

        </div>
            <!--/.col (right) -->
          </div>
          <!-- /.row -->
        </section>
        <!-- /.content -->
      </div>
      <!-- /.content-wrapper -->
      <%- include('../../layouts/footer.ejs') %>
      <!-- Add the sidebar's background. This div must be placed
       immediately after the control sidebar -->
      <div class="control-sidebar-bg"></div>
    </div>
    <!-- ./wrapper -->

    <!-- jQuery 3 -->
    <%-include('../../layouts/script.ejs')%>
  </body>
</html>
