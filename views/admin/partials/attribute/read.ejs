<!DOCTYPE html>
<html>
<head>
  <%- include('../../layouts/head.ejs')%>
</head>
<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">

  <%- include('../../layouts/header.ejs')%>
  <!-- Left side column. contains the logo and sidebar -->
  <%- include('../../layouts/sidebar.ejs')%>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <%-include('../../layouts/content-header.ejs')%>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <!-- /.box -->

          <div class="box">
            <div class="box-header">
              <h3 class="box-title"><a class="btn btn-success" href="/attribute/create">Thêm mới</a></h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>STT</th>
                  <th>Tên thuộc tính</th>
                  <th>Ngày tạo</th>
                  <th>Ngày cập nhật</th>
                  <th>Tùy chọn</th>
                </tr>
                </thead>
                <tbody>
                <% findAllAttr.forEach((attr, index)=>{ %>
                <tr>
                  <td><%- index+1 %></td>
                  <td><%-attr.name%></td>
                  <td><%=new Date(attr.createdAt).toLocaleDateString() + ' ' + new Date(attr.createdAt).toLocaleTimeString() %></td>
                        <td><%=new Date(attr.updatedAt).toLocaleDateString() + ' ' + new Date(attr.updatedAt).toLocaleTimeString() %></td>
                  <td>
                    <a class="btn btn-warning" href="/attribute/update/<%-attr._id%>" >Sửa</a>
                    <a class="btn btn-danger" href="/attribute/delete/<%-attr._id%>" onclick= "return confirm('xác nhận xóa')" >Xóa</a>
                  </td>
                </tr>
                <% }); %>
                </tbody>
                <tfoot>
                <tr>
                  <th>STT</th>
                  <th>Tên thuộc tính</th>
                  <th>Ngày tạo</th>
                  <th>Ngày cập nhật</th>
                  <th>Tùy chọn</th>
                </tr>
                </tfoot>
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <%- include('../../layouts/footer.ejs')%>
  <!-- /.control-sidebar -->
  <!-- Add the sidebar's background. This div must be placed
       immediately after the control sidebar -->
  <div class="control-sidebar-bg"></div>
  <%-include('../../layouts/script.ejs')%>
</div>
<!-- ./wrapper -->

<!-- jQuery 3 -->
<script src="../../bower_components/jquery/dist/jquery.min.js"></script>
<!-- Bootstrap 3.3.7 -->
<script src="../../bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
<!-- DataTables -->
<script src="../../bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="../../bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
<!-- SlimScroll -->
<script src="../../bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>
<!-- FastClick -->
<script src="../../bower_components/fastclick/lib/fastclick.js"></script>
<!-- AdminLTE App -->
<script src="../../dist/js/adminlte.min.js"></script>
<!-- AdminLTE for demo purposes -->
<script src="../../dist/js/demo.js"></script>
<!-- page script -->
<script>
  $(function () {
    $('#example1').DataTable()
    $('#example2').DataTable({
      'paging'      : true,
      'lengthChange': false,
      'searching'   : false,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : false
    })
  })
</script>
</body>
</html>
